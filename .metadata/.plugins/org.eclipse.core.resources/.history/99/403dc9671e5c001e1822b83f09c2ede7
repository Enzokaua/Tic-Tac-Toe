package br.com.tictac.computer;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class InteracaoComComputador extends JFrame{
	public InteracaoComComputador() {
		setTitle("1 vs Compuiter");
        setSize(700, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        this.setResizable(false);
        JPanel telaUmJogador = new JPanel();
        telaUmJogador.setLayout(null);
        JLabel titulo = new JLabel("Escolha um s√≠mbolo: ");
        titulo.setBounds(230, 30, 150, 15);
        JButton x = new JButton("X");
        JButton y = new JButton("Y");
        x.setBounds(33, 75, 250, 50);
        telaUmJogador.add(x);
        y.setBounds(33, 75, 250, 50);
        telaUmJogador.add(y);
        telaUmJogador.add(titulo);
        add(telaUmJogador);
        setVisible(true);
	}
	
}
